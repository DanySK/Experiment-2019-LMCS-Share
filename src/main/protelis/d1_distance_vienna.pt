module isolation

import utils
import algorithm

// The source of distance estimations is device 0.
let sourceID = 0;
let source = self.getDeviceUID().getId() == sourceID;
env.put('source', source);

// Determines random targets for non-source devices.
if (source) {NaN} else {
	rectangleWalk([48.205, 16.37], [48.211, 16.38], 40)
};

// Computes distances (exact and estimated through local absolute metric).
let trueDist  = self.distanceTo(sourceID);
let absDist   = G_STD(source);
env.put("td", trueDist);
env.put("ad", absDist);
